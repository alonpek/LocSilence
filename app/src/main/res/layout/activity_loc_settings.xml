<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"></android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/volumeSettings_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map_customProxy"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context="com.visual.android.locsilence.CustomProximityMap" />

                <EditText
                    android:id="@+id/radius_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_margin="5dp"
                    android:alpha=".9"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="input or draw radius"
                    android:inputType="number" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_revert_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_revert" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_go_to_selectedLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_mylocation" />
            </FrameLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:dividerPadding="2.5dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/delete_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/delete"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/set_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/set"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
